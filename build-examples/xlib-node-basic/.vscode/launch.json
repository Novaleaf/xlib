	"version": "0.2.0",
	"configurations": [
		{
			"type": "pwa-node",
			"request": "launch",
			"name": "Launch Program",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/lib/_main.js",
			//use outFiles to allow debugging other projects in this monorepo: https://stackoverflow.com/a/43152616
			"outFiles": [
				//"${workspaceFolder}/**/*.js",
				"!**/node_modules/**/*.js",
				"**/*.js"
			]
		}
	]
}