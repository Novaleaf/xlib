{
	"$schema": "http://json.schemastore.org/tsconfig",
	//"extends": "./node_modules/@xlib/build-tools/includes/tsconfig-node.json",
	"compilerOptions": {
		"outDir": "lib",
		"target": "es5",
		"module": "commonjs",
		"sourceMap": true,
		"types": [
			"node",
			"jest"
		],
		"esModuleInterop": true,
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"lib"
	],
