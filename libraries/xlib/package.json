{
  "name": "xlib",
  "version": "18.0.0-dev.10",
  "description": "Your isometric toolbox",
  "private": false,
  "author": "jason swearingen <jasons@novaleaf.com>",
  "license": "Apache-2.0",
  "keywords": [
    "xlib",
    "monolithic",
    "corelib",
    "typescript",
    "isometric"
  ],
  "bugs": {
    "url": "https://github.com/novaleaf/xlib/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/novaleaf/xlib.git"
  },
  "homepage": "https://github.com/novaleaf/xlib",
  "main": "lib/_main.js",
  "module": "lib-esm/_main.js",
  "browser": "lib-browser/xlib-bundle.js",
  "webpackBrowserTestEntry": "lib-esm/_internal/browser-mocha-test-launcher.js",
  "typings": "lib/_main.d.ts",
  "scripts": {
    "build": "pnpm run build-node && pnpm run build-browser && pnpm run test-node",
    "build-node": "heft build",
    "build-browser": "webpack --config ./lib/webpack.config.js",
    "build-fast": "heft build && webpack --config ./lib/webpack.config.js",
    "build-clean": "heft clean && pnpm run build",
    "test-browser": "pnpx webpack-dev-server --config ./lib/webpack.config.js",
    "test-node": "pnpx mocha --config ./config/.mocharc.jsonc",
    "eslint-fix": "eslint ./src/**/*.ts* --fix",
    "dep-check-major": "npm-check-updates --configFilePath ../../common/config",
    "dep-check": "npm-check-updates --configFilePath ../../common/config --target minor",
    "doc-build": "heft test --clean; api-documenter markdown --input-folder temp --output-folder",
    "watch-test": "heft build && concurrently --kill-others \"pnpm run test-node -- --watch\" \"pnpm run test-browser\""
  },
  "obsolete-scripts": {
    "watch-build": "CI=true heft test --watch --verbose",
    "watch-old": "pnpm run build-clean && concurrently --kill-others \"pnpm run watch-build\" \"pnpm run watch-rollup\""
  },
  "devDependencies": {
    "@babel/types": "7.12.6",
    "@novaleaf/xlib-build-tools": "0.0.2-dev.10",
    "@rushstack/eslint-config": "2.3.0",
    "@rushstack/heft": "0.20.0",
    "@types/lodash": "4.14.165",
    "@types/mocha": "^8.0.3",
    "@types/node": "14.0.27",
    "@types/platform": "^1.3.3",
    "@types/webpack": "4.41.24",
    "@types/webpack-dev-server": "3.11.1",
    "@novaleaf/xlib-eslint-config": "0.0.1",
    "css-loader": "^4.3.0",
    "eslint": "7.13.0",
    "html-webpack-plugin": "^4.5.0",
    "mocha": "8.2.1",
    "null-loader": "4.0.1",
    "source-map-loader": "1.1.2",
    "style-loader": "1.3.0",
    "threads-plugin": "^1.3.3",
    "ts-node": "^9.0.0",
    "webpack": "4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@types/pino": "6.3.3",
    "chalk": "^4.1.0",
    "gaxios": "4.0.1",
    "lodash": "^4.17.20",
    "pino": "6.7.0",
    "pino-pretty": "4.3.0",
    "platform": "^1.3.6",
    "source-map-support": "^0.5.19",
    "threads": "^1.6.3"
  }
}
