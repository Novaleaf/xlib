{
  "name": "xlib",
  "version": "18.0.0-develop.0",
  "description": "Your isometric swiss army knife",
  "private": false,
  "author": "jason swearingen <jasons@novaleaf.com>",
  "license": "MIT",
  "keywords": [
    "xlib",
    "monolithic",
    "corelib",
    "typescript",
    "isometric"
  ],
  "bugs": {
    "url": "https://github.com/novaleaf/xlib/issues"
  },
  "homepage": "https://github.com/novaleaf/xlib",
  "main": "lib/_main.js",
  "module": "lib-esm/_main.js",
  "browser": "lib-browser/xlib-bundle.js",
  "webpackBrowserTestEntry": "lib-esm/_internal/browser-mocha-test-launcher.js",
  "typings": "lib/_main.d.ts",
  "scripts": {
    "build": "heft test && webpack --config ./lib/webpack.config.js",
    "build-fast": "heft build && webpack --config ./lib/webpack.config.js",
    "build-clean": "heft clean && pnpm run build",
    "test-browser": "heft build --clean && pnpx webpack-dev-server --config ./lib/webpack.config.js",
    "test-node": "heft test --clean",
    "watch-build": "CI=true heft test --watch --verbose",
    "watch-old": "pnpm run build-clean && concurrently --kill-others \"pnpm run watch-build\" \"pnpm run watch-rollup\"",
    "eslint-fix": "eslint ./src/**/*.ts* --fix",
    "dep-check-major": "npm-check-updates --configFilePath ../../common/config",
    "dep-check": "npm-check-updates --configFilePath ../../common/config --target minor",
    "doc-build": "heft test --clean; api-documenter markdown --input-folder temp --output-folder",
    "watch-test": "heft build && concurrently --kill-others \"heft test --watch\" \"webpack-dev-server --config ./lib/webpack.config.js\""
  },
  "devDependencies": {
    "@babel/types": "^7.11.5",
    "@rushstack/eslint-config": "1.4.2",
    "@rushstack/heft": "0.13.9",
    "@types/lodash": "^4.14.161",
    "@types/mocha": "^8.0.3",
    "@types/node": "14.0.27",
    "@types/platform": "^1.3.3",
    "@types/webpack": "^4.41.22",
    "@types/webpack-dev-server": "^3.11.0",
    "@xlib/build-tools": "workspace:*",
    "@xlib/eslint-config": "workspace:*",
    "css-loader": "^4.3.0",
    "eslint": "7.10.0",
    "html-webpack-plugin": "^4.5.0",
    "mocha": "^8.1.3",
    "null-loader": "^4.0.0",
    "source-map-loader": "^1.1.0",
    "style-loader": "^1.2.1",
    "threads-plugin": "^1.3.3",
    "ts-node": "^9.0.0",
    "webpack": "4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@types/pino": "6.3.2",
    "chalk": "^4.1.0",
    "gaxios": "3.2.0",
    "lodash": "^4.17.20",
    "pino": "^6.6.1",
    "pino-pretty": "^4.2.1",
    "platform": "^1.3.6",
    "source-map-support": "^0.5.19",
    "threads": "^1.6.3"
  }
}