{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": false,
    "inlineSourceMap": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "strict": false, /////////  change for vNext    
    "noEmitOnError": false,
    "jsx": "react",
    "newLine": "LF",
    "pretty": true,
    "stripInternal": true,
    //"diagnostics": true, // verbose debug output of tsc build
    //"listFiles": true, // verbose debug output of tsc build
    //"listEmittedFiles": true, // verbose debug output of tsc build
    "target": "es6",
    "watch": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false, /////////  change for vNext
    "noImplicitAny": false, /////////  change for vNext
    "noImplicitThis": false, /////////  change for vNext
    "noUnusedLocals": false, /////////  change for vNext
    "noUnusedParameters": false,
    "strictNullChecks": false, /////////  change for vNext
    "suppressExcessPropertyErrors": true, /////////  change for vNext
    "suppressImplicitAnyIndexErrors": true, /////////  change for vNext
    "noStrictGenericChecks": true, /////////  change for vNext
    "skipLibCheck": false,
    "alwaysStrict": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": true,
    //"baseUrl": null,
    //"charset": null,
    "checkJs": false,
    "downlevelIteration": true,
    "emitBOM": false,
    "emitDeclarationOnly": false,
    "disableSizeLimit": false,
    "emitDecoratorMetadata": false, /////////  change for vNext
    "esModuleInterop": false, /////////  change for vNext
    "experimentalDecorators": false, /////////  change for vNext
    "importHelpers": true, /////////  change for vNext
    "keyofStringsOnly": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false, /////////  change for vNext   
    "typeRoots": [
      "./src/types",
    ],
    "types": [
      "xlib-globals",
    ],
    "outDir": "dist",
    "rootDir": "src",
  },
  // "typeAcquisition": { //not enabling to force explicit usage of new types
  //   "enable": true,
  // },
  // "include": [
  //   "./src/**/*.ts",
  //   "./src/_internal/**/*.ts",
  // ],
  "exclude": [
    "node_modules",
    "src/_graveyard",
    "dist",
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "exclude": "test",
    "theme": "default",
    "ignoreCompilerErrors": true,
    "excludePrivate": true,
    "excludeNotExported": true,
    "excludeExternals": false,
    "excludeProtected": true,
    //"target": "ES3",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "stripInternal": true,
    "suppressExcessPropertyErrors": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "commonjs",
    "hideGenerator": true,
    "includeDeclarations": false,
    "readme": "none",
    //"entryPoint": "\"src/xlib\""
  }
}