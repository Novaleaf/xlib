{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": false,
    "inlineSourceMap": false,
    "composite": true, /////////  really buggy in ts 3.0.3
    "declaration": true,
    "declarationMap": true, /////////  change for vNext
    "noEmitOnError": true,
    "jsx": "react",
    "newLine": "LF",
    "pretty": true,
    "stripInternal": true,
    "diagnostics": false,
    "target": "es6",
    "watch": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false, /////////  change for vNext
    "noImplicitAny": false, /////////  change for vNext
    "noImplicitThis": false, /////////  change for vNext
    "noUnusedLocals": false, /////////  change for vNext
    "noUnusedParameters": false,
    "strictNullChecks": false, /////////  change for vNext
    "suppressExcessPropertyErrors": true, /////////  change for vNext
    "suppressImplicitAnyIndexErrors": true, /////////  change for vNext
    "noStrictGenericChecks": true, /////////  change for vNext
    "skipLibCheck": false,
    "alwaysStrict": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": true,
    //"baseUrl": null,
    //"charset": null,
    "checkJs": false,
    "downlevelIteration": true,
    "emitBOM": false,
    "emitDeclarationOnly": false,
    "disableSizeLimit": false,
    "emitDecoratorMetadata": false, /////////  change for vNext
    "esModuleInterop": false, /////////  change for vNext
    "experimentalDecorators": false, /////////  change for vNext
    "importHelpers": true, /////////  change for vNext
    "keyofStringsOnly": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false, /////////  change for vNext    
    "typeRoots": [
      "./src/types",
    ],
    "types": [
      "xlib-globals",
    ],
  },
  "exclude": [
    "node_modules",
    "src/graveyard",
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "exclude": "test",
    "theme": "default",
    "ignoreCompilerErrors": true,
    "excludePrivate": true,
    "excludeNotExported": true,
    "excludeExternals": false,
    "excludeProtected": true,
    //"target": "ES3",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "stripInternal": true,
    "suppressExcessPropertyErrors": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "commonjs",
    "hideGenerator": true,
    "includeDeclarations": false,
    "readme": "none",
    //"entryPoint": "\"src/xlib\""
  }
}