{
  "name": "@xlib/browser-build",
  "version": "0.0.1",
  "description": "builds an esm (browser) version of xlib and puts it in ../xlib/lib-esm",
  "typings": "lib/_main.d.ts",
  "scripts": {
    "build": "heft build --clean",
    "watch": "heft build --clean ; heft build --watch",
    "eslint-fix": "",
    "dep-check-major": "npm-check-updates --configFilePath ../../common/config",
    "dep-check": "npm-check-updates --configFilePath ../../common/config --target minor"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@rushstack/heft": "0.13.1",
    "@types/jest": "~26.0.13",
    "@types/node": "14.0.27",
    "@xlib/build-tools": "workspace:*",
    "xlib": "workspace:*",
    "@xlib/eslint-config": "workspace:*"
  }
}